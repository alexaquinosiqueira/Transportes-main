@model Transportadora.UI.Site.ViewModels.VehicleViewModel
@using Transportadora.UI.Site.ViewModels
@{
    ViewData["Title"] = "Editar Veículo";
}


<div class="container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
        <div class="panel-body">
            <div class="row">
                <div class="pull-right">
                    <a asp-action="Index" data-toggle="tooltip" title="Voltar Para lista" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Voltar</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Editar Veículo</h3>
            </div>
            <div class="panel-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Tipo do Veículo</label>

                        <select name="VehicleType_Id" id="VehicleType_Id" class="form-control">
                            <option></option>
                            @foreach (var vehicleType in (ViewData["VehicleTypes"] as List<VehicleTypeViewModel>))
                            {

                                if (vehicleType.Id == Model.VehicleType_Id)
                                {
                <option value="@vehicleType.Id" selected>@vehicleType.Description</option>
 }
            else
            {
                <option value="@vehicleType.Id">@vehicleType.Description</option>
}

        }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Frota</label>

                        <select name="Fleet_Id" id="Fleet_Id" class="form-control">
                            <option></option>
                            @foreach (var fleet in (ViewData["Fleets"] as List<FleetViewModel>))
                            {
                                if (fleet.Id == Model.Fleet_Id)
                                {
                <option value="@fleet.Id" selected>@fleet.Description</option>
 }
            else
            {
                <option value="@fleet.Id">@fleet.Description</option>
}

        }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Motorista</label>

                        <select name="Employee_Id" id="Employee_Id" class="form-control">
                            <option></option>
                            @foreach (var employee in (ViewData["Employees"] as List<EmployeeViewModel>))
                            {
                                if (employee.Id == Model.Employee_Id)
                                {
                <option value="@employee.Id" selected>@employee.Name</option>
 }
            else
            {
                <option value="@employee.Id">@employee.Name</option>
}

        }
                        </select>
                    </div>

                    <div class="form-group col-md-4 col-sm-4" style="margin-left:-13px;">
                        <label class="control-label">UF</label>
                        <select name="state" id="state" class="form-control">
                            <option></option>
                            @if (ViewData["States"] != null)
                            {
                @foreach (var state in (ViewData["States"] as List<StateViewModel>))
                {

                    {
                        if (Model.City != null)

                            if (state.Id == Model.City.State.Id)
                            {
                <option value="@state.Id" selected>@state.Uf - @state.Name</option>
 }
            else
            {
                <option value="@state.Id">@state.Uf - @state.Name</option>
}
    }

}}

                        </select>
                    </div>
                    <div class="form-group col-md-8 col-sm-8">
                        <label class="control-label">Cidade</label>
                        <select name="City_Id" id="City_Id" class="form-control">
                            <option></option>

                            @if (ViewData["Cities"] != null)
                            {

                @foreach (var city in (ViewData["Cities"] as List<CityViewModel>))
                {

                    if (Model.City != null)
                    {

                        if (city.Id == Model.City_Id)
                        {
                <option value="@city.Id" selected>@city.Name</option>
 }
            else
            {
                <option value="@city.Id">@city.Name</option>
}
        }

    }}
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleLicensePlate" class="control-label"></label>
                        <input asp-for="VehicleLicensePlate" class="form-control" />
                        <span asp-validation-for="VehicleLicensePlate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="chassi" class="control-label"></label>
                        <input asp-for="chassi" class="form-control" />
                        <span asp-validation-for="chassi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="renavam" class="control-label"></label>
                        <input asp-for="renavam" class="form-control" />
                        <span asp-validation-for="renavam" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="km" class="control-label"></label>
                        <input asp-for="km" class="form-control" />
                        <span asp-validation-for="km" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="tank" class="control-label"></label>
                        <input asp-for="tank" class="form-control" />
                        <span asp-validation-for="tank" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="average" class="control-label"></label>
                        <input asp-for="average" class="form-control" />
                        <span asp-validation-for="average" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="litragem" class="control-label"></label>
                        <input asp-for="litragem" class="form-control" />
                        <span asp-validation-for="litragem" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />

                    <div class="pull-right">
                        <button type="reset" data-toggle="tooltip" title="Limpar Formulário" class="btn btn-warning">
                            <i class="fa fa-eraser "></i> Limpar
                        </button>
                        <button type="submit" data-toggle="tooltip" title="Atualizar" class="btn btn-primary">
                            <i class="fa fa-save"></i> Atualizar
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
