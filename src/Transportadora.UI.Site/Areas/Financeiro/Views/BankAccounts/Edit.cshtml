@model Transportadora.UI.Site.ViewModels.BankAccountViewModel
@using Transportadora.UI.Site.ViewModels

@{
    ViewData["Title"] = "Edição de Conta";
}


<div class="container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
        <div class="panel-body">
            <div class="row">
                <div class="pull-right">
                    <a asp-action="Index" data-toggle="tooltip" title="Voltar Para lista" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Voltar</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Editar Conta</h3>
            </div>
            <div class="panel-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label class="control-label">Banco</label>

                        <select name="Bank_Id" id="Bank_Id" class="form-control">
                            <option></option>
                            @foreach (var bank in (ViewData["Banks"] as List<BankViewModel>))
                            {

                                if (bank.Id == Model.Bank_Id)
                                {
                                    <option value="@bank.Id" selected>@bank.Description</option>
                                }
                                else
                                {
                                    <option value="@bank.Id">@bank.Description</option>
                                }

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Branch" class="control-label"></label>
                        <input asp-for="Branch" class="form-control" />
                        <span asp-validation-for="Branch" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account" class="control-label"></label>
                        <input asp-for="Account" class="form-control" />
                        <span asp-validation-for="Account" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Overdraft" class="control-label"></label>
                        <input asp-for="Overdraft" class="form-control" />
                        <span asp-validation-for="Overdraft" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OpeningBalance" class="control-label"></label>
                        <input asp-for="OpeningBalance" class="form-control" />
                        <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentBalance" class="control-label"></label>
                        <input asp-for="CurrentBalance" class="form-control" />
                        <span asp-validation-for="CurrentBalance" class="text-danger"></span>
                    </div>


                    <div class="pull-right">
                        <button type="reset" data-toggle="tooltip" title="Limpar Formulário" class="btn btn-warning">
                            <i class="fa fa-eraser "></i> Limpar
                        </button>
                        <button type="submit" data-toggle="tooltip" title="Atualizar" class="btn btn-primary">
                            <i class="fa fa-save"></i> Atualizar
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    $(document).ready(function () {
        $('select').select2();
        $('.dates').datetimepicker({
            pickTime: false,
            format: 'DD/MM/YYYY'
        });
    });</script>
